views:
  - type: cards
    name: THM
    filters:
      and:
        - file.folder == "COURSES/THM"
    order:
      - file.name
    sort:
      - property: Number
        direction: ASC
    image: note.aliases
    imageAspectRatio: 0.95
    cardSize: 170
  - type: cards
    name: HACKVISER
    filters:
      and:
        - file.folder == "COURSES/HACKVISER"
    image: note.aliases
    cardSize: 300
    imageFit: contain
    imageAspectRatio: 0.65
